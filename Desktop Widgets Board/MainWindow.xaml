<Window x:Class="Desktop_Widgets_Board.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Widgets_Board"
        mc:Ignorable="d"
        Height="1020" Width="450" WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Weather widget -->
        <Border Grid.Row="1" Style="{StaticResource weatherWidgetBorder}">
        </Border>
        
        <!-- Appointment Calendar widget -->
        <Border Grid.Row="2" Style="{StaticResource widgetBorder}">
        </Border>

        <!-- ToDo List widget -->
        <Border Grid.Row="3" Style="{StaticResource widgetBorder}">
        </Border>

        <!-- Audo Player widget -->
        <Border Grid.Row="4" Style="{StaticResource widgetBorder}">
        </Border>

    </Grid>
</Window>
