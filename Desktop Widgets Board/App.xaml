<Application x:Class="Desktop_Widgets_Board.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop_Widgets_Board"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="weatherWidgetBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Color="#42a5f5" Offset="0.1"/>
                        <GradientStop Color="#64b5f6" Offset="0.4"/>
                        <GradientStop Color="#90caf9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="widgetBorder" TargetType="Border">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
    </Application.Resources>
</Application>
